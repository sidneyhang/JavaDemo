<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tinthon.springtest.mapping.classMapper">

    <select id="getClass" parameterType="int" resultMap="classResultMap" resultType="com.tinthon.springtest.model.Classes">
        select * from class c inner join teacher t on c.teacher_id=t.t_id where c.c_id=#{id}
    </select>

    <resultMap id="classResultMap" type="com.tinthon.springtest.model.Classes">
        <id property="id" column="c_id" />
        <result property="name" column="c_name" />
        <association property="teacher" javaType="com.tinthon.springtest.model.Teacher">
            <id property="id" column="t_id" />
            <result property="name" column="t_name" />
        </association>
    </resultMap>


</mapper>